<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow"  
        ResizeMode="NoResize"
        Height="600" 
        Width="800" 
        WindowStartupLocation="CenterScreen">
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="160"/>
        </Grid.ColumnDefinitions>
        
        <!--Header-->
        <Border BorderBrush="#e1f4c8" 
                Background="#e1f4c8" 
                Grid.ColumnSpan="3"/>
        <!--Logo-->
        <Border Background="#78b24b" 
                Height="50" 
                Width="50" 
                CornerRadius="25"/>
        
        <TextBlock Text="логотип" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center" 
                   FontSize="10" 
                   FontWeight="Bold"/>
        
        <!---->
        <Border Grid.Column="1" 
                Background="White" 
                Height="30" 
                CornerRadius="8" 
                Margin="15"/>
        
        <TextBlock Grid.Column="1" 
                   Height="13" 
                   Margin="30,0,0,0" 
                   Text="Организационная структура" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Left" 
                   FontSize="10" 
                   FontWeight="Bold"/>

        <Grid Grid.Row="1" Grid.ColumnSpan="3">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Background="#d9d9d9" 
                       Margin="27,30,5, 20">

                <Grid.RowDefinitions>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

            <Button Width="100" 
                    Height="30" 
                    Background="#e1f4c8" 
                    BorderBrush="#e1f4c8"
                    Content="Дороги России"
                    Grid.ColumnSpan="2"
                    VerticalAlignment="Top"
                    Margin="10"/>

            <Button Width="190" 
                    Height="30" 
                    Background="#e1f4c8" 
                    BorderBrush="#e1f4c8"  
                    Content="Административный департамент"
                    Grid.Row="1"
                    HorizontalAlignment="Left"
                    Margin="5"/>

            <Button Width="150" 
                    Height="30" 
                    Background="#e1f4c8" 
                    BorderBrush="#e1f4c8"  
                    Content="Академия Умные дороги"
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    Margin="5"/>

            <Button Width="120" 
                    Height="30" 
                    Background="#e1f4c8" 
                    BorderBrush="#e1f4c8" 
                    Content="Договорной отдел"
                    Grid.Row="2"
                    HorizontalAlignment="Left"/>

            <Button Width="110" 
                    Height="30" 
                    Background="#e1f4c8" 
                    BorderBrush="#e1f4c8" 
                    Content="Общий отдел"
                    Grid.Row="2"
                    HorizontalAlignment="Left"
                    Margin="140,0,0,0"/>

            <Button Width="135" 
                    Height="30" 
                    Background="#e1f4c8" 
                    BorderBrush="#e1f4c8" 
                    Content="Лицензионный отдел"
                    Grid.Row="3"
                    HorizontalAlignment="Left"
                    Margin="35,0,0,0"/>

            <Button Width="145" 
                    Height="30" 
                    Background="#e1f4c8" 
                    BorderBrush="#e1f4c8" 
                    Content="Управление маркетинга"
                    Grid.Row="3"
                    HorizontalAlignment="Left"
                    Margin="190,0,0,0"/>

                <Line X1="160" 
                  Y1="40" 
                  X2="100" 
                  Y2="60" 
                  Stroke="Black" 
                  StrokeThickness="1"
                  Grid.RowSpan="5"/>

                <Line X1="200" 
                  Y1="40" 
                  X2="275" 
                  Y2="60" 
                  Stroke="Black" 
                  StrokeThickness="1"
                  Grid.RowSpan="5"/>

                <Line X1="80" 
                      Y1="90" 
                      X2="60" 
                      Y2="110" 
                      Stroke="Black" 
                      StrokeThickness="1"
                      Grid.RowSpan="5"/>
                
                <Line X1="120" 
                      Y1="90" 
                      X2="195" 
                      Y2="110" 
                      Stroke="Black" 
                      StrokeThickness="1"
                      Grid.RowSpan="5"/>

                <Line X1="175" 
                      Y1="140" 
                      X2="110" 
                      Y2="160" 
                      Stroke="Black" 
                      StrokeThickness="1"
                      Grid.RowSpan="5"/>

                <Line X1="215" 
                      Y1="140" 
                      X2="265" 
                      Y2="160" 
                      Stroke="Black" 
                      StrokeThickness="1"
                      Grid.RowSpan="5"/>

            </Grid>

        <Grid Background="#d9d9d9" 
           Margin="5,30,27, 20" 
           Grid.Column="1">

            <Button Width="40" 
                    Height="40"
                    Background="#e1f4c8"
                    BorderBrush="#e1f4c8"
                    Content="+"
                    FontWeight="Bold"
                    FontSize="20"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Margin="0,0,20,20"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
